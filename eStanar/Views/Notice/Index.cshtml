@using eStanar.ViewModel
@model NoticeViewModel

@{
    ViewBag.Title = "Obavijesti";
}

<ul class="list-group">
    @foreach (var n in Model.NoticeDetailsList.Select((model, index) => new { model, index }))
    {
        @Html.Partial("NoticeItem", new NoticeDetailsItemViewModel() { NoticeDetails = n.model, HideMoreDetailsLink = false, DisplayBottomBorder = (n.index < @Model.NoticeDetailsList.Count - 1) })
    }
</ul>